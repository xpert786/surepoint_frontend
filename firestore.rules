rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: Allow all authenticated users to read all users (for Users & Roles page)
    match /users/{userId} {
      // Allow create: user must be authenticated and creating their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow read: any authenticated user can read all user documents
      allow read: if request.auth != null;
      
      // Allow update: user can update their own document, or COO/Admin can update any
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        // Try to check role, but don't fail if document doesn't exist
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coo' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'))
      );
      
      // Allow delete: user can delete their own document, or COO/Admin can delete any
      allow delete: if request.auth != null && (
        request.auth.uid == userId ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coo' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'))
      );
    }
    
    // Orders: Allow all authenticated users to read (for development)
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // KPIs: Allow all authenticated users to read (for development)
    match /kpis/{kpiId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // KPI collection (capital): Allow all authenticated users to read
    match /KPI/{kpiId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Clients: Allow all authenticated users to read (for development)
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Inventory: Allow all authenticated users to read (for development)
    match /inventory/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Testing collection: Allow all authenticated users to read (for development)
    match /testing/{orderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Logs collection: Allow all authenticated users to read
    match /logs/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
